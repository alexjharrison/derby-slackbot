{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "moduleResolution": "Node",
    "strict": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "noEmit": true,
    "skipLibCheck": true,
  },
  "include": ["src"],
  "ts-node":{
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}
